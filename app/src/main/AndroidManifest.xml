<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.igrice">

    <application
        android:allowBackup="true"
        android:icon="@drawable/controller"
        android:label="@string/app_name"
        android:roundIcon="@drawable/controller"
        android:supportsRtl="true"
        android:theme="@style/Theme.Igrice">
        <activity android:name=".Activities.DeleteActivity"></activity>
        <activity android:name=".Activities.EditActivity" />
        <activity android:name=".Activities.AddActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>