<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="Igrice">

        <CheckBoxPreference
            android:defaultValue="false"
            android:key="promeni_ime"
            android:summary="Dozvoli promenu igrice"
            android:title="Promeni igricu" />
        <ListPreference
            android:defaultValue="1"
            android:dependency="promeni_ime"
            android:entries="@array/izmena_ImenaUnos"
            android:entryValues="@array/izmena_ImenaVrednost"
            android:key="list_preference_1"
            android:title="Igrice" />
    </PreferenceCategory>
    <PreferenceCategory android:title="Konzole">

        <CheckBoxPreference
            android:defaultValue="false"
            android:key="promeni_konzolu"
            android:summary="Dozvoli promenu konzole"
            android:title="Promeni konzolu" />
        <ListPreference
            android:defaultValue="1"
            android:dependency="promeni_konzolu"
            android:entries="@array/izmena_KonzolaUnos"
            android:entryValues="@array/izmena_KonzolaVrednost"
            android:key="list_preference_2"
            android:title="Konzola" />
    </PreferenceCategory>
</PreferenceScreen>